{
  "name": "infotainter",
  "version": "0.0.1",
  "description": "An interactive infotainment screen",
  "main": "index.js",
  "private": true,
  "files": [],
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files-web": "copyfiles -u 1 src/**/*.html src/**/**/*.html src/**/*.css src/**/**/*.css src/**/*.pem dist/webroot",
    "tsc-web": "tsc -b src/web/tsconfig.json",
    "tsc-server": "tsc -b tsconfig.json",
    "tsc": "npm run tsc-server && npm run tsc-web",
    "build-and-copy": "npm run clean && npm run tsc && npm run copy-files-web",
    "lint": "eslint --ext .ts src",
    "lint-fix": "eslint --ext .ts --fix src",
    "test": "jest",
    "animation-test": "npm run tsc-web && npm run copy-files-web && npx http-server -S -C cert1/cert.crt -K cert1/cert.key -c-1 dist/webroot",
    "start-server": "npm run tsc && npm run copy-files-web && node dist/server/index.js"
  },
  "author": "P&O CW 2021-2022",
  "license": "ISC",
  "engines": {
    "node": ">=14"
  },
