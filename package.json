    "@wdio/jasmine-framework": "^7.16.1",
    "@wdio/local-runner": "^7.16.2",
    "@wdio/spec-reporter": "^7.16.1",
    "chromedriver": "^94.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "http-server": "^14.1.0",
