{
    "name": "infotainter",
    "version": "0.0.1",
    "description": "An interactive infotainment screen",
    "main": "index.js",
    "private": true,
    "files": [],
    "scripts": {
        "clean": "rimraf dist/",
        "copy-files-web": "copyfiles -u 1 src/**/*.html src/**/*.css dist/webroot",
        "tsc-web": "tsc -b src/web/tsconfig.json",
        "tsc-server": "tsc -b tsconfig.json",
        "tsc": "npm run tsc-server && npm run tsc-web",
        "build-and-copy": "npm run clean && npm run tsc && npm run copy-files-web",
        "lint": "eslint --ext .ts src",
        "lint-fix": "eslint --ext .ts --fix src",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "npm run tsc-web && npm run copy-files-web && npx http-server -S -C cert1/cert.crt -K cert1/cert.key -c-1 dist/webroot"
    },
    "author": "P&O CW 2021-2022",
    "license": "ISC",
    "engines": {
        "node": ">=14"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/koa": "^2.13.4",
        "@types/koa__router": "^8.0.8",
        "@types/koa-logger": "^3.1.2",
        "@types/koa-mount": "^4.0.1",
        "@types/koa-static": "^4.0.2",
        "@types/node": "^16.10.3",
        "@types/sharp": "^0.29.2",
        "@types/supertest": "^2.0.11",
        "@types/three": "^0.135.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@wdio/jasmine-framework": "^7.16.1",
        "@wdio/local-runner": "^7.16.2",
        "@wdio/spec-reporter": "^7.16.1",
        "chromedriver": "^94.0.0",
        "copyfiles": "^2.4.1",
        "eslint": "^8.0.0",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^27.2.5",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "ts-jest-mock": "^1.1.0",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.3",
        "wdio-chromedriver-service": "^7.2.2"
    },
    "dependencies": {
        "@koa/router": "^10.1.1",
        "@types/jquery": "^3.5.9",
        "@types/yargs": "^17.0.3",
        "http-server": "^14.1.0",
        "jquery": "^3.6.0",
        "koa": "^2.13.3",
        "koa-logger": "^3.2.1",
        "koa-mount": "^4.0.0",
        "koa-static": "^5.0.0",
        "mathjs": "^10.1.1",
        "sharp": "^0.29.1",
        "socket.io-client": "^4.4.0",
        "three": "^0.135.0",
        "yargs": "^17.2.1",
        "zod": "^3.11.6"
    }
}
